<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shottimer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="edu.smu.lab.afinal.shottimer">


    <TextView
        android:text="shot3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shot3"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_alignBaseline="@+id/shot2"
        android:layout_alignBottom="@+id/shot2"
        android:layout_toEndOf="@+id/shot2"
        android:layout_marginLeft="20dp" />

    <TextView
        android:text="shot2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shot2"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_below="@+id/timer"
        android:layout_toEndOf="@+id/shot1"
        android:layout_marginLeft="20dp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="156dp"
        android:layout_below="@+id/Start"
        android:layout_alignParentStart="true">

    </ScrollView>

    <TextView
        android:text="split1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/split1"
        android:textColor="@android:color/holo_blue_light"
        android:layout_above="@+id/shot3"
        android:layout_alignStart="@+id/SPLITS" />

    <TextView
        android:text="split2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/split2"
        android:textColor="@android:color/holo_blue_light"
        android:layout_alignBaseline="@+id/shot3"
        android:layout_alignBottom="@+id/shot3"
        android:layout_alignStart="@+id/split1" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/reset"
        android:background="@drawable/reset1"
        android:layout_alignBaseline="@+id/Start"
        android:layout_alignBottom="@+id/Start"
        android:layout_alignStart="@+id/split2" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/Start"
        android:background="@drawable/start1"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/split2"
        android:layout_toEndOf="@+id/shot1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SPLITS"
        android:textColor="@android:color/holo_blue_light"
        android:layout_marginLeft="20dp"
        android:textSize="26sp"
        android:text="Splits"
        android:layout_marginStart="18dp"
        android:layout_above="@+id/split1"
        android:layout_toEndOf="@+id/Start" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Drill 1: 3-3-3 "
        android:textSize="35sp"
        android:id="@+id/title1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:textSize="50sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/title1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp" />

    <TextView
        android:text="shot1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shot1"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_below="@+id/timer"
        android:layout_toStartOf="@+id/title1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <TextView
        android:text="Description: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:id="@+id/textView11" />

        <TextView
            android:text="Draw and shoot three shots at a three inch target from three meters away."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@android:color/holo_green_dark"
            android:id="@+id/textView12" />
        <TextView
            android:text="Goal: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:id="@+id/textView13" />
        <TextView
            android:text="Accuracy/Speed. "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@android:color/holo_green_dark"
            android:id="@+id/textView14" />
        <TextView
            android:text="Suggested times: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:id="@+id/textView15" />
        <TextView
            android:text="Beginner: 5sec , Intermediate: 3sec , Advanced: 1sec."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@android:color/holo_green_dark"
            android:id="@+id/textView16" />
    </LinearLayout>


</RelativeLayout>
