<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_drillsno1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="edu.smu.lab.afinal.drillsno1">

    <TextView
        android:text="shot3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shot3"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_alignBaseline="@+id/shot2"
        android:layout_alignBottom="@+id/shot2"
        android:layout_toEndOf="@+id/shot2"
        android:layout_marginLeft="20dp" />

    <Button
        android:layout_height="70dp"
        android:id="@+id/reset"
        android:background="@drawable/reset1"
        android:layout_width="70dp"
        android:layout_alignBaseline="@+id/Start"
        android:layout_alignBottom="@+id/Start"
        android:layout_alignEnd="@+id/SPLITS"
        android:layout_marginEnd="17dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/Start"
        android:background="@drawable/start1"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/shot4" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/Start"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="Description: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:id="@+id/textView11" />
            <TextView
                android:text="At 5 meters, draw and engage two targets, reload, and re-engage both targets. Use a double target for this drill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@android:color/holo_green_dark"
                android:id="@+id/textView12" />
            <TextView
                android:text="Goal: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:id="@+id/textView13" />
            <TextView
                android:text="Reload/Target Acquisition. "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@android:color/holo_green_dark"
                android:id="@+id/textView14" />
            <TextView
                android:text="Suggested times: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:id="@+id/textView15" />
            <TextView
                android:text="Beginner: 10sec , Intermediate: 7sec , Advanced: 5sec."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@android:color/holo_green_dark"
                android:id="@+id/textView16" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:text="shot4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shot4"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_alignBottom="@+id/split3"
        android:layout_alignStart="@+id/shot1" />

    <TextView
        android:text="split2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/split2"
        android:textColor="@android:color/holo_blue_light"
        android:layout_below="@+id/split1"
        android:layout_alignStart="@+id/split1" />

    <TextView
        android:text="split3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/split3"
        android:textColor="@android:color/holo_blue_light"
        android:paddingBottom="5dp"
        android:layout_below="@+id/shot3"
        android:layout_alignStart="@+id/split2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SPLITS"
        android:textColor="@android:color/holo_blue_light"
        android:layout_marginLeft="20dp"
        android:textSize="26sp"
        android:text="Splits"
        android:layout_above="@+id/split1"
        android:layout_toEndOf="@+id/Start"
        android:layout_marginStart="26dp" />

    <TextView
        android:text="split1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/split1"
        android:textColor="@android:color/holo_blue_light"
        android:layout_above="@+id/shot3"
        android:layout_alignStart="@+id/SPLITS" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Drill 2: 2-R-2 "
        android:textSize="35sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/shot1" />

    <TextView
        android:text="shot2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shot2"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/timer"
        android:layout_toEndOf="@+id/shot4"
        android:layout_marginStart="20dp"
        android:layout_marginTop="11dp" />

    <TextView
        android:text="shot1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shot1"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_marginStart="36dp"
        android:layout_alignBaseline="@+id/shot2"
        android:layout_alignBottom="@+id/shot2"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:textSize="50sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/shot4"
        android:layout_marginTop="60dp" />

</RelativeLayout>
