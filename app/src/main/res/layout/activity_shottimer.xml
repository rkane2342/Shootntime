<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shottimer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="edu.smu.lab.afinal.shottimer">

    <TextView
        android:text="shot5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shot5"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_alignBaseline="@+id/shot4"
        android:layout_alignBottom="@+id/shot4"
        android:layout_alignStart="@+id/shot2" />

    <TextView
        android:text="shot3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shot3"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_alignBaseline="@+id/shot2"
        android:layout_alignBottom="@+id/shot2"
        android:layout_toEndOf="@+id/shot2"
        android:layout_marginLeft="20dp" />

    <TextView
        android:text="split3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/split3"
        android:textColor="@android:color/holo_blue_light"
        android:layout_below="@+id/split2"
        android:layout_alignStart="@+id/split4"
        android:paddingBottom="5dp" />

    <TextView
        android:text="split1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/split1"
        android:textColor="@android:color/holo_blue_light"
        android:layout_alignBaseline="@+id/timer"
        android:layout_alignBottom="@+id/timer"
        android:layout_alignStart="@+id/SPLITS"
        android:layout_marginBottom="5dp" />

    <TextView
        android:text="split2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/split2"
        android:textColor="@android:color/holo_blue_light"
        android:layout_below="@+id/split1"
        android:layout_alignStart="@+id/split1"
        android:layout_marginBottom="5dp" />

    <TextView
        android:text="split4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/split4"
        android:textColor="@android:color/holo_blue_light"
        android:layout_below="@+id/split3"
        android:layout_alignStart="@+id/split2" />

    <TextView
        android:text="shot4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shot4"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_alignBaseline="@+id/split4"
        android:layout_alignBottom="@+id/split4"
        android:layout_alignStart="@+id/shot1" />

    <TextView
        android:text="shot2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shot2"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_marginLeft="20dp"
        android:layout_alignBaseline="@+id/shot1"
        android:layout_alignBottom="@+id/shot1"
        android:layout_toEndOf="@+id/shot1"
        android:layout_marginStart="20dp" />

    <TextView
        android:text="shot1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shot1"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_above="@+id/split3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp" />

    <TextView
        android:text="Timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:id="@+id/timer"
        android:textSize="50sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/shot1" />

    <Button
        android:id="@+id/Start"
        android:background="@drawable/start1"
        android:layout_marginTop="63dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/shot5"
        android:layout_toEndOf="@+id/shot4" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/reset"
        android:background="@drawable/reset1"
        android:layout_alignBaseline="@+id/Start"
        android:layout_alignBottom="@+id/Start"
        android:layout_alignEnd="@+id/SPLITS"
        android:layout_marginEnd="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SPLITS"
        android:textColor="@android:color/holo_blue_light"
        android:layout_marginLeft="20dp"
        android:textSize="26sp"
        android:text="Splits"
        android:layout_marginStart="29dp"
        android:layout_alignTop="@+id/timer"
        android:layout_toEndOf="@+id/Start" />

</RelativeLayout>
