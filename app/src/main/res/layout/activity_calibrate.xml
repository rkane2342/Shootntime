<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calibrate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="edu.smu.lab.afinal.calibrate">

    <TextView
        android:text="INSTRUCTIONS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textColor="@android:color/holo_red_dark"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Draw and wait 2 seconds,shoot once. Time should appear around 2 seconds. If no time appears, raise the sensitivity. If it shows up before expeced time, lower the sensitivity."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekbtext"
        android:textColor="@android:color/holo_green_dark"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="16sp" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:id="@+id/seekBar"
        android:scrollbarSize="100dp"
        android:elevation="10dp"
        android:background="@android:color/white"
        android:layout_below="@+id/seekbtext"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar"
        android:layout_toStartOf="@+id/textView7"
        android:layout_marginTop="13dp"
        android:id="@+id/textView9" />

    <TextView
        android:text="High"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView10"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:text="Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calibri"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/seekbtext"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Sensitivity Level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        android:layout_alignBottom="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />
</RelativeLayout>
